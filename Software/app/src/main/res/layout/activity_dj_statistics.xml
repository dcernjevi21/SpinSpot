<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DJStatisticsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Naslov -->
        <TextView
            android:id="@+id/tvStatistikaNaslov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Statistika"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Početni datum -->
        <TextView
            android:id="@+id/tv_dj_statistics_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Odaberite početni datum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStatistikaNaslov" />

        <EditText
            android:id="@+id/et_dj_statistics_start_date"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@id/tv_dj_statistics_start_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Završni datum -->
        <TextView
            android:id="@+id/tv_dj_statistics_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odaberite završni datum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_dj_statistics_start_date" />

        <EditText
            android:id="@+id/et_dj_statistics_end_date"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@id/tv_dj_statistics_end_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Statistike -->
        <TextView
            android:id="@+id/tv_dj_statistics_gig_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Vaš broj gaži iznosi:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_dj_statistics_end_date" />

        <TextView
            android:id="@+id/tv_dj_statistics_zarada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Ukupna zarada:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dj_statistics_gig_number" />

        <TextView
            android:id="@+id/tv_dj_statistics_gig_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Najčešći tip gaže:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dj_statistics_zarada" />

        <!-- Gumb za PDF -->
        <Button
            android:id="@+id/btnGenerirajPdf"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Generate PDF"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dj_statistics_gig_type" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Povratak"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnGenerirajPdf" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- NavigationView -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>